<div class='container' ng-controller="HomeController">


	 <!-- Modal -->
	  <div class="modal fade" id="myModal" role="dialog">
	    <div class="modal-dialog">
	    
	      <!-- Modal content-->
	      <div class="modal-content">
	        <div class="modal-header">
	          <button type="button" class="close" data-dismiss="modal">&times;</button>
	          <h4 class="modal-title">Modal Header</h4>
	        </div>
	        <div class="modal-body">
	          <img ng-src="{{currentlyFocusedImage.file_source}}" />
	        </div>
	        <div class="modal-footer">
	          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
	        </div>
	      </div>
	      
	    </div>
	  </div>
	
	<div class='row' ng-repeat="picture in all_pictures track by $index">
		<div ng-click="getImageAndOverlay(picture, $index)">
			<div class='col-md-2'>{{picture.file_path}}</div>
			<img class='col-md-2 cssImg1' ng-src="{{'image/' + picture.id}}" />
			<div class="col-md-8 container">
				<div class="row container"><h2 class="col-md-6">Description:</h2><span class="col-md-6" ng-bind="picture.description"></span></div>
				<div class="row"><h3>Created:</h3> {{picture.createdAt}}</div>
				<div class="row"><h4>Updated:</h4> {{picture.updatedAt}}</div>
			
			</div>
		</div>
	</div>

</div>


 
