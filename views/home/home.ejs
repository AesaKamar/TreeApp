<div ng-controller="HomeController">

  <form name="form">
    Single Image with validations
    <div class="btn btn-info" ngf-select ng-model="picture.fileData" name="fileData" ngf-pattern="'image/*'"
      ngf-accept="'image/*'" ngf-max-size="20MB" ngf-min-height="100">Select</div>
      {{picture.fileData}}
    <button class="btn btn-submit" type="submit" ng-click="uploadPicture(picture)">submit</button>
  </form>

  <div class="row">
    <span>HELLO</span>
    {{getPicture}}
    <img src="{{'data:image/jpg;base64' + getPicture.data }}" alt="imageData" />
  </div>
</div>
